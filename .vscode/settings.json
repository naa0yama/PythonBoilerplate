{
  /*****************************************************************************
  * VSCode の設定
  *****************************************************************************/
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.defaultFormatter": "ms-python.python",
    "editor.formatOnPaste": false,
    "editor.formatOnSaveMode": "file",
    "editor.tabSize": 4
  },
  "[markdown]": {
    "editor.formatOnSaveMode": "file",
    "editor.tabSize": 4
  },
  "[toml]": {
    "editor.formatOnSaveMode": "file",
    "editor.tabSize": 4
  },
  "[ini]": {
    "editor.formatOnSaveMode": "file",
    "editor.tabSize": 4
  },
  // 行にカラー ブロックではなく実際の文字を表示します。
  "editor.minimap.renderCharacters": false,
  // 表示領域をミニマップで常にハイライト
  "editor.minimap.showSlider": "always",
  // 選択行を行番号含めすべてハイライト
  "editor.renderLineHighlight": "all",
  // 半角スペースを常に表示
  "editor.renderWhitespace": "all",
  // 指定文字で縦ルーラーを表示する
  "editor.rulers": [
    80,
    100,
    120
  ],
  /*****************************************************************************
   * 「ファイル モニタリングから除外するファイル パスの glob パターンを構成します。
   * この設定を変更すると、再起動が必要になります。
   ****************************************************************************/
  "files.associations": {
    "setup.cfg": "ini"
  },
  "files.autoGuessEncoding": true,
  "files.autoSave": "onFocusChange", //    タブやウィンドウがフォーカスを失うと自動保存する
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.insertFinalNewline": true, //     ファイルの保存時に末尾を改行
  "files.trimFinalNewlines": true, //      ファイルの保存時に最終行以降をトリミング
  "files.trimTrailingWhitespace": true, // ファイルの保存時に行末の空白をトリミング
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.mypy_cache/**": true,
    "**/.pytest_cache/**": true,
    "**/.tox/**": true,
    "**/.venv/**": true
  },
  "markdown.extension.list.indentationSize": "inherit",
  /*****************************************************************************
   * Ansible の設定
   ****************************************************************************/
  "ansible.ansible.path": "${workspaceFolder}/.venv/bin/ansible",
  "ansible.python.activationScript": "${workspaceFolder}/.venv/bin/activate",
  "ansible.python.interpreterPath": "${workspaceFolder}/.venv/bin/python3",
  /*****************************************************************************
   * Python の設定
   ****************************************************************************/
  "autoDocstring.docstringFormat": "google",
  // Jupyter notebook の root directory を プロジェクトroot にする
  "jupyter.notebookFileRoot": "${workspaceFolder}",
  "python.analysis.extraPaths": [
    "${workspaceFolder}/.venv/lib/**/site-packages/",
  ],
  "python.analysis.typeCheckingMode": "basic",
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python3",
  "python.envFile": "${workspaceFolder}/.env",
  "python.experiments.enabled": false,
  "python.venvFolders": [
    "envs",
    ".direnv",
    ".venv"
  ],
  /*****************************************************************************
   * Python の設定 black
   ****************************************************************************/
  "python.formatting.blackArgs": [
    "--line-length=99"
  ],
  "python.formatting.blackPath": "${workspaceFolder}/.venv/bin/black",
  "python.formatting.provider": "black",
  /*****************************************************************************
   * Python の設定 isort
   ****************************************************************************/
  "isort.path": [
    "${workspaceFolder}/.venv/bin/isort"
  ],
  /*****************************************************************************
   * Python の設定 linting
   ****************************************************************************/
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "${workspaceFolder}/.venv/bin/flake8",
  "python.linting.lintOnSave": true,
  "python.linting.mypyArgs": [],
  "python.linting.mypyCategorySeverity.error": "Error",
  "python.linting.mypyCategorySeverity.note": "Information",
  "python.linting.mypyEnabled": true,
  "python.linting.mypyPath": "${workspaceFolder}/.venv/bin/mypy",
  "python.linting.pycodestyleEnabled": false,
  "python.linting.pylintEnabled": false,
  /*****************************************************************************
   * Python の設定 testing
   ****************************************************************************/
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "coverage-gutters.coverageFileNames": [
    "lcov.info",
    "cov.xml",
    "coverage.xml",
    "jacoco.xml",
    "coverage.cobertura.xml"
  ],
  "coverage-gutters.showLineCoverage": true,
  "coverage-gutters.showRulerCoverage": true,
  "coverage-gutters.ignoredPathGlobs": "**/{.mypy_cache,.pytest_cache,.tox,.venv,node_modules,,vendor,venv}/**",
  "coverage-gutters.manualCoverageFilePaths": [
    "coverage.xml",
  ],
  /*****************************************************************************
   * プロジェクト 参加者には 拡張機能をおすすめする false でおすすめ
   ****************************************************************************/
  "extensions.ignoreRecommendations": false
}
